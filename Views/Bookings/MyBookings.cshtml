@model IEnumerable<SUPFLY.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
}

<h2 class="text-center mb-5">Your Confirmed Reservations</h2>

@if (ViewBag.NoPassengerProfile != null && (bool)ViewBag.NoPassengerProfile)
{
    <div class="alert alert-danger text-center shadow-sm" role="alert">
        <h4><i class="bi bi-person-exclamation"></i> Profile Required</h4>
        <p>Your user account is not linked to a passenger profile. Please ensure your account has a linked passenger entry in the database.</p>
        @* Link to a Passenger creation page if you have one *@
        <a asp-controller="Passengers" asp-action="Create" class="btn btn-danger btn-sm">Create Profile</a>
    </div>
}

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm h-100 border-primary">
                    <div class="card-header bg-primary text-white d-flex justify-content-between">
                        <h5 class="mb-0">Booking ID: #@item.Id</h5>
                        <small>@item.Status</small>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title text-center">@item.Flight?.FromAirport?.Code <i class="bi bi-arrow-right"></i> @item.Flight?.ToAirport?.Code</h4>
                        <p class="card-text text-muted text-center small">@item.Flight?.FromAirport?.City to @item.Flight?.ToAirport?.City</p>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-5">Flight Number:</dt>
                            <dd class="col-sm-7">@item.Flight?.FlightNumber</dd>

                            <dt class="col-sm-5">Departure Time:</dt>
                            <dd class="col-sm-7">@item.Flight?.DepartureTime.ToString("dd MMM yyyy HH:mm")</dd>

                            <dt class="col-sm-5">Seat Assigned:</dt>
                            <dd class="col-sm-7"><strong>@(string.IsNullOrEmpty(item.SeatNumber) ? "Pending" : item.SeatNumber)</strong></dd>

                            <dt class="col-sm-5">Booked On:</dt>
                            <dd class="col-sm-7">@item.BookingDate.ToString("dd MMM yyyy")</dd>

                            <dt class="col-sm-5">Price Paid:</dt>
                            <dd class="col-sm-7 text-success fw-bold">@item.PricePaid.ToString("C")</dd>
                        </dl>
                        
                        <div class="d-grid mt-3">
                            <a asp-controller="Bookings" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">View E-Ticket Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else if (Model != null)
{
    <div class="alert alert-info text-center shadow-sm" role="alert">
        <h4 class="alert-heading">No Bookings Found!</h4>
        <p>You have no reservations currently associated with this account. Use the search function to find a flight.</p>
        <hr>
        @* FIXED LINK BELOW *@
        <a asp-controller="Flights" asp-action="Search" class="btn btn-info">Start Searching Flights</a>
    </div>
}