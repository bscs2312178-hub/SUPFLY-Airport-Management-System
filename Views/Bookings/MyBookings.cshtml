@model IEnumerable<SUPFLY.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
}

<h2 class="text-center mb-5">Your Confirmed Reservations</h2>

@if (ViewBag.NoPassengerProfile != null && ViewBag.NoPassengerProfile)
{
    <div class="alert alert-danger text-center" role="alert">
        <h4>Profile Required</h4>
        <p>Your user account is not linked to a passenger profile. Please ensure your account has a linked passenger entry in the database.</p>
    </div>
}

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm h-100 border-primary">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Booking ID: #@item.Id</h5>
                    </div>
                    <div class="card-body">
                        @* This relies on the nested includes (Flight -> Airports) we added in the controller action *@
                        <h4 class="card-title">@item.Flight.FromAirport.Code &rarr; @item.Flight.ToAirport.Code</h4>
                        <p class="card-text text-muted">@item.Flight.FromAirport.City &rarr; @item.Flight.ToAirport.City</p>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-5">Flight Number:</dt>
                            <dd class="col-sm-7">@item.Flight.FlightNumber</dd>

                            <dt class="col-sm-5">Departure Time:</dt>
                            <dd class="col-sm-7">@item.Flight.DepartureTime.ToString("dd MMM yyyy HH:mm")</dd>

                            <dt class="col-sm-5">Seat Assigned:</dt>
                            <dd class="col-sm-7"><strong>@item.SeatNumber</strong></dd>

                            <dt class="col-sm-5">Booked On:</dt>
                            <dd class="col-sm-7">@item.BookingDate.ToString("dd MMM yyyy")</dd>

                            <dt class="col-sm-5">Price Paid:</dt>
                            <dd class="col-sm-7 text-success font-weight-bold">@item.PricePaid.ToString("C")</dd>
                        </dl>
                        @* You can add a button to view details or cancel here if you implement those actions *
                        @* <a asp-controller="Bookings" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info mt-2">View Details</a> *@
                    </div>
                </div>
            </div>
        }
    </div>
}
else if (Model != null)
{
    <div class="alert alert-info text-center" role="alert">
        <h4 class="alert-heading">No Bookings Found!</h4>
        <p>You have no reservations currently associated with this account. Use the search function to find a flight.</p>
        <hr>
        <a asp-controller="Search" asp-action="Index" class="btn btn-info">Start Searching</a>
    </div>
}