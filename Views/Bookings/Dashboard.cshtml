@model SUPFLY.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container py-4">
    <h1 class="mb-4">Management Dashboard</h1>

    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-uppercase small">Total Revenue</h6>
                    <h2 class="display-6 fw-bold">@Model.TotalRevenue.ToString("C")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-uppercase small">Total Bookings</h6>
                    <h2 class="display-6 fw-bold">@Model.TotalBookings</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-uppercase small">Active Flights</h6>
                    <h2 class="display-6 fw-bold">@Model.TotalFlights</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-uppercase small">Registered Passengers</h6>
                    <h2 class="display-6 fw-bold">@Model.TotalPassengers</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold">Recent Reservations</h5>
            <a asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Date</th>
                        <th>Passenger</th>
                        <th>Flight</th>
                        <th>Revenue</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.RecentBookings)
                    {
                        <tr>
                            <td>@item.Date.ToString("MMM dd, HH:mm")</td>
                            <td class="fw-bold">@item.PassengerName</td>
                            <td><span class="badge bg-secondary">@item.FlightNumber</span></td>
                            <td class="text-success">@item.Amount.ToString("C")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-sm btn-light border">
                                    <i class="bi bi-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>