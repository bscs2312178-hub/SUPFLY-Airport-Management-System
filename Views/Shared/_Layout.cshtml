<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SUPFLY</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SUPFLY.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-airplane-fill"></i> SUPFLY
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold" asp-controller="Flights" asp-action="Search">
                                <i class="bi bi-search"></i> Find Flights
                            </a>
                        </li>

                        @* Visible to all logged-in passengers *@
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Bookings" asp-action="MyBookings">
                                    <i class="bi bi-ticket-perforated"></i> My Bookings
                                </a>
                            </li>
                        }

                        @* --- ADMIN & STAFF MANAGEMENT MENU --- *@
                        @if (User.IsInRole("Admin") || User.IsInRole("Staff") || User.Identity?.Name == "admin@supfly.com")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-primary" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-gear-wide-connected"></i> Management
                                </a>
                                <ul class="dropdown-menu shadow-lg border-0" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="dropdown-item fw-bold text-primary" asp-controller="Bookings" asp-action="Manage">
                                            <i class="bi bi- pencil-square"></i> Manage Statuses
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>

                                    <li><a class="dropdown-item" asp-controller="Flights" asp-action="Index">Manage Flights</a></li>
                                    <li><a class="dropdown-item" asp-controller="Airports" asp-action="Index">Airports</a></li>
                                    <li><a class="dropdown-item" asp-controller="Aircraft" asp-action="Index">Aircraft Fleet</a></li>

                                    <li><hr class="dropdown-divider"></li>

                                    <li><a class="dropdown-item" asp-controller="Passengers" asp-action="Index">Passenger List</a></li>
                                    <li><a class="dropdown-item" asp-controller="Bookings" asp-action="Index">Full Log (History)</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2026 - SUPFLY - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <partial name="_ValidationScriptsPartial" />

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>